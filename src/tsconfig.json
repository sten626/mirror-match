{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../dist/out-tsc",
    "paths": {
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"]
    },
    "sourceMap": true,
    // TODO: Change `target` back to es2015 once the coverage/inheritance bug gets fixed
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ]
  }
}

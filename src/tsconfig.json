{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es2020",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": ["../node_modules/@types"]
  },
  "files": ["main.ts"],
  "include": ["src/**/*.d.ts"],
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}
